{
	"name": "mantine-next-template",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"analyze": "ANALYZE=true next build",
		"start": "next start",
		"export": "next build && next export",
		"typecheck": "tsc --noEmit",
		"lint": "npm run eslint && npm run stylelint",
		"eslint": "next lint",
		"stylelint": "stylelint '**/*.css' --cache",
		"jest": "jest",
		"jest:watch": "jest --watch",
		"prettier:check": "prettier --check \"**/*.{ts,tsx}\"",
		"prettier:write": "prettier --write \"**/*.{ts,tsx}\"",
		"test": "npm run prettier:check && npm run lint && npm run typecheck && npm run jest",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build",
		"deploy": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh",
		"deploy:only": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh --skip-build",
		"deploy:frontend": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh --skip-plugin",
		"deploy:plugin": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh --skip-frontend --skip-build",
		"deploy:frontend-only": "chmod +x ./scripts/deploy.sh && ./scripts/deploy.sh --skip-build --skip-plugin",
		"lint:biome": "biome lint .",
		"format:biome": "biome format . --write",
		"check:biome": "biome check --apply ."
	},
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.0",
		"@mantine/carousel": "^7.17.3",
		"@mantine/core": "^7.17.3",
		"@mantine/hooks": "^7.17.3",
		"@mantine/notifications": "^7.17.3",
		"@next/bundle-analyzer": "^14.2.4",
		"@tabler/icons-react": "^3.26.0",
		"@tanstack/react-query": "^5.62.15",
		"@tanstack/react-query-devtools": "^5.62.15",
		"@uidotdev/usehooks": "^2.4.1",
		"next": "^15.1.6",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"y": "^0.3.2"
	},
	"devDependencies": {
		"@babel/core": "^7.24.7",
		"@biomejs/biome": "1.5.3",
		"@emotion/babel-plugin": "^11.11.0",
		"@eslint/js": "^9.15.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.3.1",
		"@storybook/nextjs": "^8.1.10",
		"@storybook/react": "^8.1.10",
		"@testing-library/dom": "^10.1.0",
		"@testing-library/jest-dom": "^6.4.6",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/eslint-plugin-jsx-a11y": "^6",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.17.30",
		"@types/react": "^18.3.3",
		"babel-loader": "^9.1.3",
		"eslint": "^9.15.0",
		"eslint-config-mantine": "^4.0.3",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.2",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"postcss": "^8.4.38",
		"postcss-preset-mantine": "1.17.0",
		"postcss-simple-vars": "^7.0.1",
		"prettier": "^3.3.2",
		"storybook": "^8.1.10",
		"storybook-dark-mode": "^4.0.2",
		"stylelint": "^16.6.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"ts-jest": "^29.1.5",
		"typescript": "5.5.2",
		"typescript-eslint": "^8.14.0"
	},
	"packageManager": "yarn@4.5.3"
}
