{
	"compilerOptions": {
		"types": ["node", "jest", "@testing-library/jest-dom", "react"],
		"target": "es2017",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es2015",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"es2022"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
